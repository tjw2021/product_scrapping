# Solar Inventory Automation System - Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# REQUIRED SETTINGS
# ============================================================================

# Google Sheets Configuration
GOOGLE_SHEET_NAME=Solar Inventory Tracker

# Google Credentials (choose one method):
# Method 1: Use credentials.json file (recommended)
# - Just place credentials.json in the project root
# Method 2: Set credentials as environment variable
# GOOGLE_CREDENTIALS={"type":"service_account","project_id":"..."}


# ============================================================================
# OPTIONAL: EMAIL ALERTS
# ============================================================================

# SMTP Server Settings (Gmail example)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587

# Your Gmail address
SMTP_USERNAME=your-email@gmail.com

# Gmail App Password (NOT your regular password!)
# Generate at: https://myaccount.google.com/apppasswords
SMTP_PASSWORD=your-app-password-here

# Email addresses
ALERT_FROM_EMAIL=your-email@gmail.com
ALERT_TO_EMAIL=recipient@example.com


# ============================================================================
# SCRAPING CONFIGURATION
# ============================================================================

# How often to scrape (in hours)
SCRAPE_INTERVAL_HOURS=6

# Which distributors to scrape (comma-separated)
# Options: solar_cellz, solar_electric, wholesale_solar, alte
DISTRIBUTORS_TO_SCRAPE=solar_cellz,solar_electric,wholesale_solar,alte


# ============================================================================
# ALERT SETTINGS
# ============================================================================

# Minimum price drop percentage to trigger alert
PRICE_DROP_THRESHOLD=10.0

# Send alerts for new products
SEND_NEW_PRODUCT_ALERTS=true

# Send alerts for stock changes
SEND_STOCK_ALERTS=true

# Send weekly summary email
SEND_WEEKLY_SUMMARY=true


# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable price history tracking
ENABLE_PRICE_TRACKING=true

# Enable email alerts
ENABLE_EMAIL_ALERTS=true

# Create comparison tab in Google Sheets
CREATE_COMPARISON_TAB=true

# Create summary statistics tab
CREATE_SUMMARY_TAB=true


# ============================================================================
# ADVANCED SETTINGS
# ============================================================================

# Price history file location
PRICE_HISTORY_FILE=price_history.json

# How many days of price history to keep
KEEP_HISTORY_DAYS=90
